<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="rootNode" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.finalProject.controller.LoginFormController">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.78">
         <image>
            <Image url="@../image/blueContainerTank.png" />
         </image>
      </ImageView>
      <Pane layoutX="19.0" layoutY="78.0" prefHeight="257.0" prefWidth="200.0" style="-fx-background-color: white; -fx-background-radius: 10;">
         <children>
            <Text fill="#1d4e89" layoutX="75.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Text>
            <TextField fx:id="txtUsername" layoutX="15.0" layoutY="58.0" onAction="#txtUsernameOnAction" prefHeight="29.0" prefWidth="170.0" promptText="username/userID" style="-fx-background-radius: 10;">
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="txtPassword" layoutX="15.0" layoutY="97.0" onAction="#txtPasswordOnAction" prefHeight="29.0" prefWidth="170.0" promptText="password" style="-fx-background-radius: 10;">
               <font>
                  <Font size="12.0" />
               </font>
            </TextField>
            <JFXButton buttonType="RAISED" layoutX="42.0" layoutY="177.0" onAction="#btnLoginOnAction" prefHeight="19.0" prefWidth="116.0" style="-fx-background-color: #1d4e89;" text="Login here" textFill="WHITE">
               <effect>
                  <DropShadow />
               </effect>
            </JFXButton>
            <Hyperlink layoutX="49.0" layoutY="129.0" onAction="#hplForgotPasswordOnAction" text="forgot password?">
               <font>
                  <Font size="11.0" />
               </font>
            </Hyperlink>
            <Text layoutX="18.0" layoutY="225.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Haven't an account?">
               <font>
                  <Font size="11.0" />
               </font>
            </Text>
            <Hyperlink layoutX="128.0" layoutY="211.0" onAction="#hplRegisterOnAction" text="Register">
               <font>
                  <Font size="11.0" />
               </font>
            </Hyperlink>
         </children>
         <effect>
            <DropShadow />
         </effect>
      </Pane>
      <Text fill="WHITE" layoutX="255.0" layoutY="24.0" strokeType="OUTSIDE" strokeWidth="0.0" text="US CARGO">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
